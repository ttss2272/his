<Window x:Class="Wpf_Image.Admin.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="300" Width="300">
    <Grid>
        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="40,64,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="109,67,0,0" Name="txtAdminUserName" VerticalAlignment="Top" Width="120" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="40,106,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="109,109,0,0" Name="txtAdminPassword" VerticalAlignment="Top" Width="120" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="60,154,0,0" Name="btnAdminLogin" VerticalAlignment="Top" Width="75" Click="btnAdminLogin_Click" />
        <Button Content="Exit" Height="23" HorizontalAlignment="Left" Margin="154,154,0,0" Name="button2" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
