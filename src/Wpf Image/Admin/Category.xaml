<Window x:Class="Wpf_Image.Admin.Category"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Category Name" Height="28" HorizontalAlignment="Left" Margin="18,37,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="127,39,0,0" Name="txtCategory" VerticalAlignment="Top" Width="120" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="52,96,0,0" Name="btnCategory" VerticalAlignment="Top" Width="75" Click="btnCategory_Click" />
        <Button Content="Close" Height="23" HorizontalAlignment="Left" Margin="157,96,0,0" Name="btnClose" VerticalAlignment="Top" Width="75" Click="btnClose_Click" />
        <DataGrid AutoGenerateColumns="False" Height="105" HorizontalAlignment="Left" Margin="12,144,0,0" Name="dataGrid1" VerticalAlignment="Top" Width="254" />
    </Grid>
</Window>
